# Server Configuration
PORT=4000
NODE_ENV=development

# Database Configuration
MONGO_URI=mongodb://localhost:27017/feedlith

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d
REFRESH_TOKEN_EXPIRY=10d

# Admin Configuration
ADMIN_KEY=admin123

# ===== BLOCKCHAIN CONFIGURATION =====

# RPC URL for Ethereum node connection
# Local development: http://localhost:8545 (Ganache)
# Sepolia testnet: https://sepolia.infura.io/v3/YOUR_INFURA_KEY
# Mainnet (production): https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY
BLOCKCHAIN_RPC_URL=http://localhost:8545

# Deployed FeedbackSystem smart contract address
# Get this after deploying smart_contract.sol on your chosen network
CONTRACT_ADDRESS=0xCCACdd95CA167256656D3b02F7e70337B811D7ea

# Admin account private key for signing blockchain transactions
# ⚠️ SECURITY: Use a test account with limited funds
# ⚠️ NEVER commit this to version control
# ⚠️ For production, use hardware wallet or key management service
ADMIN_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb476c3c24d24e27c02f1e11ad3d7

# Optional: Infura API Key (if using Infura for RPC)
INFURA_API_KEY=your_infura_api_key_here

# Optional: Alchemy API Key (if using Alchemy for RPC)
ALCHEMY_API_KEY=your_alchemy_api_key_here
